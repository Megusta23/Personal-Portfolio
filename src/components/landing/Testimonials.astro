---
// Define testimonials/opinions data
const humanOpinions = [
  {
    name: "My friends and family",
    role: "",
    opinion: "They often describe me as exceptionally kind and committed. ",
  },
];
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="mt-6 space-y-2">
      <div class="h-0.5 bg-amber-400"></div>
      <h3 class="text-amber-400 text-base font-medium">
        <span>human</span>
        <span class="font-bold">opinions</span>
      </h3>
      <div class="h-1.5 bg-amber-400"></div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-4 text-amber-400 gap-6 pt-2 mt-2">
      {
        humanOpinions.map((opinion) => (
          <div>
            <p class="italic text-2xl block font-bold">
              {opinion.name} {opinion.role}
            </p>
            <p class="text-sm leading-relaxed mt-6">{opinion.opinion}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
